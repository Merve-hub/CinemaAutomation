@model List<DataAccess.Entities.Salloon>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>

            <th>Salloon Name</th>
            <th>Capacity</th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        @foreach (var salloon in Model)
        {
            <tr>

                <td>@salloon.SalloonName</td>
                <td>@salloon.Capacity</td>
                <td>

                    <a asp-action="Details" asp-controller="Salloon" asp-route-id="@salloon.Id">Details
                    </a>
                </td>

            </tr>
        }




    </tbody>

           
           


</table>